<script type="text/javascript">
    var shopping_cart_itemcount = 0;

    function showItemsInCart() {
        $.post({
            url: "/shopping_cart/show",
            success: function (items) {
                if (items == "EMPTY") {
                    $("#list").html("");
                    displayEmpty();
                    $("#shopping_cart_noti").html(0);
                } else {
                    $("#list").html("");
                    addItem(items);
                    $("#shopping_cart_noti").html(items.length);
                }
            }
        })
    }

    function addItem(items) {
        items.forEach(function (item) {
            var sc_item = $("#SCIM").clone();
            sc_item.attr("style", "");
            sc_item.removeAttr("id");
            var sc_removeItem = sc_item.find(".removeItemLink");
            sc_removeItem.click(function() {
                removeItem(item.ListingID);
            });
            var sc_image = sc_item.find("img");
            sc_image.attr("src", "/images/listingImages/" + item.itemPicture);
            $(sc_item).find(".sc_item_name").html(item.itemDescription);
            $(sc_item).find("span").html("$" + item.itemPrice);
            $("#list").prepend(sc_item);
        })
    }

    function removeItem(itemID) {
        $.post({
            url: "/shopping_cart/remove/" + itemID,
            success: function (res) {
                if (res == "OK") {
                    showItemsInCart();
                }
            }
        });
    }

    function displayEmpty() {
        $("#list").prepend("<div style=\"text-align:center ; margin-top: 20px; margin-bottom: 40px;\"> Your List Is Empty! </div>");
    }

    $("#clearAll").click(function () {
        $.post({
            url: "/shopping_cart/remove_all",
            success: function(res) {
                if (res == "OK") {
                    alert("Successfully cleared all items in shopping cart!");
                    showItemsInCart();
                } else {
                    alert("An error occured while emptying cart, Please Try Again!");
                    showItemsInCart();
                }
            }
        });
        
    })
    showItemsInCart();
</script>
